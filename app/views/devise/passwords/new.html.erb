<div class="flex flex-row justify-center">
  <div class="flex md:flex-row justify-center items-center mt-14 w-5/6 lg:w-1/3 xl:w-1/4 p-8 py-20 bg-yellow-50 shadow-lg drop-shadow-2xl text-slate-800">
    <div class="w-full ml-5">
      <h2 class=" mb-2 text-2xl border-b-2 border-slate-200 font-semibold">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field w-full">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full h-10 my-5 p-2 border border-solid border-slate-700 rounded-sm" %>
        </div>

              
        <div class="actions flex justify-between">
            <div>
              <%= link_to "Sign Up", new_user_registration_path, class:"mr-2 mt-2" %>
              <%= link_to "Log In", new_user_session_path, class:"mr-2 mt-2" %>

            </div>
              <%= f.submit "Send", class: "text-lg font-semibold text-white w-1/3 p-3 rounded-md bg-slate-800 hover:bg-slate-700 hover:cursor-pointer " %>
        </div>
      <% end %>


      
      <%# <%= render "devise/shared/links" %>

    </div>
 </div>  
 