
<div class="flex flex-row justify-center">
<div class="flex flex-row justify-center items-center mt-14 w-1/2 p-8 py-20 bg-yellow-50 shadow-lg drop-shadow-2xl text-slate-800">
  <div class="w-1/2 mr-5">
     <%= image_tag("male_social_media", class: "w-full") %>
  </div>
 
   <div class="w-1/2 ml-5">
    <h2 class="pl-2 pb-2 mb-2 text-3xl border-b-2 border-slate-200 font-semibold">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field w-full">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "w-full h-10 mt-5 p-2 border border-solid border-slate-700 rounded-sm"%>
      </div>
    
      <div class="field w-full">
        <%= f.password_field :password, autocomplete: "current-password",  class: "w-full h-10 mt-5 p-2 border border-solid border-slate-700 rounded-sm" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field w-full">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions flex justify-end">
        <%= f.submit "Log in", class: "text-lg font-semibold text-white w-1/3 p-3 rounded-md bg-slate-800 hover:bg-slate-700 hover:cursor-pointer " %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

   </div>
 </div>  
 
 