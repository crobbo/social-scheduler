<p style="color: green"><%= notice %></p>

<h1 class="text-3xl text-slate-700 text-center font-bold">Planner</h1>
<p class="text-center">Edit or delete your scheduled posts.</p>
<div class="flex flex-row justify-center w-full">
  <div class="w-1/2 flex flex-col items-center justify-center" id="posts">
    <% @posts.each do |post| %>
    <div class="max-w-md py-4 px-8 bg-white shadow-lg rounded-lg my-10 w-full break-words">
      <div class="flex justify-center md:justify-end -mt-8 w-full">
        <!-- <img class="" src="https://images.unsplash.com/photo-1499714608240-22fc6ad53fb2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80"> -->
        <%= image_tag post.twitter_account.image, class: "w-14 h-14 object-cover rounded-full border-2 border-indigo-500" %>
      </div>
      <div>
        <p class="text-base font-semibold mt-2 text-slate-800"><%= post.content %></p>
        
      </div>
      <div class="flex justify-between mt-4">
      <div>
        <p><span class="font-semibold text-cyan-600">Scheduled for </span><%= post.schedule_time %></p>
        <%= link_to "Edit", edit_post_path(post), class:"font-light text-slate-800 mr-1" %>
        <%= link_to "Delete", post, method: :delete, class:"font-light text-slate-800" %>
      </div>
        <%=link_to "#{post.twitter_account.username}", social_accounts_path, class:"text-xl font-medium text-indigo-500" %>
        
      </div>
    </div>
    <% end %>
  </div>
</div>