<% if user_signed_in? %>
    <nav data-controller="menu" data-menu-menulink-value="0" class="w-full shadow-ld md:mt-2 bg-slate-800 md:bg-slate-50 mb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 ">
        <div class="flex items-center justify-between md:justify-end h-16">
            <div class="hidden md:block">
                <div class="ml-4 flex items-center md:ml-6">
                    <!-- Profile dropdown -->
                    <div class="ml-3 relative">
                        <div>
                            <button data-action="menu#toggleDesktopDropdown" type="button" class="max-w-xs bg-white rounded-full border-4 border-gray-500 flex items-center text-sm focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-offset-gray-600 focus:ring-white" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                                <span class="sr-only">Open user menu</span>
                                
                                <% if current_user.twitter_accounts.count > 0 %>     
                                    <div>
                                        <%= image_tag current_user.twitter_accounts.first.image, class: "h-10 w-10 rounded-full" %>
                                    </div>
                                <% else %>
                                    <div>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 rounded-full text-gray-500 p-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                                    </div>
                                <% end %>            
                            </button>
                        </div>            
                    <div data-menu-target="desktopDropdown" class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none hidden" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                        <% if user_signed_in? %>
                            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700" %>
                        <% else %>
                            <%= link_to "Sign In", new_user_session_path, class: "block px-4 py-2 text-sm text-gray-700", id: "user-menu-item-2"%>
                        <% end %>   
                        <!-- <a href="#" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2">Sign out</a> -->
                    </div>
                    </div>
                </div>
                </div>
                <div class="md:hidden font-light text-xl bg-slate-800 p-1 px-2 rounded-lg ">
                    <p class="text-white">social<span class="text-teal-200">scheduler</span> </p>
                </div>
                <div class="-mr-2 flex justify-between md:justify-end md:hidden">
                <!-- Mobile menu button -->
        
                <button data-action="menu#toggleMobileDropdown" type="button" class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu, show/hide based on menu state. -->
        <div data-menu-target="mobileDropdown"  class="hidden md:hidden" id="mobile-menu">
            <div  class="px-2 pt-2 pb-3 space-y-1 sm:px-3" >
                <a data-menu-target="link" href="/posts/new" class="block px-3 py-2 rounded-md text-base font-medium">Schedule a post</a>
                <a data-menu-target="link" href="/posts" class="block px-3 py-2 rounded-md text-base font-medium" >Planner</a>
                <a data-menu-target="link" href="/social_accounts" class="block px-3 py-2 rounded-md text-base font-medium">Connect Socials</a>
            </div>
            <div class="pt-4 pb-3 border-t border-gray-700">
                <div class="flex items-center px-5">
                <div class="flex-shrink-0">
                    <% if current_user.twitter_accounts.count > 0 %>     
                        <div>
                            <%= image_tag current_user.twitter_accounts.first.image, class: "h-10 w-10 rounded-full" %>
                        </div>
                    <% else %>
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 rounded-full text-gray-500 p-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                        </div>
                    <% end %>   
                </div>
                </div>
                <div class="mt-3 px-2 space-y-1">
                <a href="/users/sign_out" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Sign out</a>
                </div>
            </div>
        </div>
    </nav>
<% else %>
    <nav class="bg-white w-full">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-center h-16">
                <a href="/"><span class="text-slate-800 text-3xl">social<span class="text-teal-200">scheduler</span></span></a>
            </div>
        </div>
    </nav>
<% end %>